#!/bin/bash

# Simple wrapper for check-app-installation.sh
# Usage: ./check-app owner/repo
# Example: ./check-app trieloff/as-a-bot

# Get the directory where this script is located
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

# Check if argument is provided
if [ "$#" -ne 1 ]; then
    echo "Usage: $0 <owner/repo>"
    echo "Example: $0 trieloff/as-a-bot"
    exit 1
fi

# Split owner/repo argument
IFS='/' read -r OWNER REPO <<< "$1"

# Validate the split
if [ -z "$OWNER" ] || [ -z "$REPO" ]; then
    echo "Error: Invalid repository format. Use owner/repo"
    echo "Example: $0 trieloff/as-a-bot"
    exit 1
fi

# Call the main script
"$SCRIPT_DIR/check-app-installation.sh" "$OWNER" "$REPO"